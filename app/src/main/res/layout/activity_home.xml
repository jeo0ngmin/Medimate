<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/app_primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar"
        app:layout_constraintEnd_toEndOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="@id/bottom_bar"
        app:layout_constraintTop_toTopOf="@id/bottom_bar"
        app:tint="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_alarm"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/app_primary_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_pill"
        app:layout_constraintEnd_toStartOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_alarm"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="알림"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_alarm"
        app:layout_constraintStart_toStartOf="@id/btn_alarm"
        app:layout_constraintTop_toBottomOf="@id/btn_alarm" />


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_history"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/app_primary_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_alarm"
        app:layout_constraintTop_toTopOf="@id/btn_alarm">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_history"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="복용 내역"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_history"
        app:layout_constraintStart_toStartOf="@id/btn_history"
        app:layout_constraintTop_toBottomOf="@id/btn_history" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_pill"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/app_primary_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_alarm">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pill"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="영양제 추천"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/btn_pill"
        app:layout_constraintStart_toStartOf="@id/btn_pill"
        app:layout_constraintTop_toBottomOf="@id/btn_pill" />

</androidx.constraintlayout.widget.ConstraintLayout>